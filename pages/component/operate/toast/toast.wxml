<view class="fui-wrap">
  <view class="fui-page__hd">
    <view class="fui-page__title">Toast</view>
    <view class="fui-page__desc">Toast 轻提示，一种轻量级反馈/提示，适合用于页面转场、数据交互的等场景中。</view>
  </view>
  <view class="fui-page__bd fui-page__spacing">
    <fui-button type="gray" width="400rpx" height="84rpx" text="带图标提示" bold margin="24rpx 0" bindclick="showToast" data-type="1"></fui-button>
    <fui-button type="gray" width="400rpx" height="84rpx" text="无图标提示" bold bindclick="showToast" data-type="2">
    </fui-button>
    <fui-button type="gray" width="400rpx" height="84rpx" text="自定义内容" margin="24rpx 0" bold bindclick="showToast" data-type="3">
    </fui-button>
  </view>
  <fui-toast id="toast"></fui-toast>

  <!--自定义内容-->
  <fui-toast id="toast2">
    <view class="fui-toast__custom">
      <fui-icon name="checkbox" color="#fff"></fui-icon>
      <text class="fui-toast__txt">操作成功</text>
    </view>
  </fui-toast>
</view>