  <text wx:if="{{text}}" class="fui-tag__text {{!background?('fui-tag_'+type+'-'+theme):''}}" style="font-size:{{size}}rpx;line-height:{{size}}rpx;color:{{color}}">{{text}}</text>
  <slot></slot>
</view>